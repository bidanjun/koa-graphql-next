{
  "name": "koa-graphql-next",
  "version": "1.0.3",
  "description": "GraphQL HTTP middleware for koa v2,ported from express-graphql,change test framework to ava.",
  "main": "lib/index.js",
  "directories": {
    "lib": "./lib"
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "\"./node_modules/.bin/nodemon \" --watch ./ index.babel.js",
    "test": "ava -v --serial",
    "clean": "./node_modules/.bin/rimraf lib",
    "build": "./node_modules/.bin/babel src --out-dir lib --source-maps false --ignore __test__ --extensions .js,.jsx --copy-files",
    "prepublish": "npm run clean && npm run build"
  },
  "ava": {
    "files": [
      "./**/__test__/**/*.spec.js"
    ],
    "failFast": true,
    "tap": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bidanjun/koa-graphql-next.git"
  },
  "keywords": [
    "koa",
    "koa2",
    "graphql",
    "react",
    "relay",
    "ava",
    "supertest-as-promised"
  ],
  "author": "danjun.bi",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/bidanjun/koa-graphql-next/issues"
  },
  "homepage": "https://github.com/bidanjun/koa-graphql-next#readme",
  "dependencies": {
    "content-type": "^1.0.2",
    "graphql": "^0.6.2",
    "http-errors": "^1.5.0",
    "raw-body": "^2.1.7"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-cli": "^6.11.4",
    "babel-plugin-transform-async-to-generator": "^6.8.0",
    "babel-plugin-transform-es2015-destructuring": "^6.9.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.11.5",
    "babel-plugin-transform-es2015-spread": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-register": "^6.11.6",
    "babel-runtime": "^6.11.6",
    "co-body": "^4.2.0",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.2.0",
    "koa-convert": "^1.2.0",
    "koa-generic-session": "^1.11.3",
    "koa-multer": "^1.0.0",
    "koa-session": "^3.3.1",
    "nodemon": "^1.10.0",
    "rimraf": "^2.5.4",
    "supertest": "^1.2.0",
    "supertest-as-promised": "^3.2.0"
  },
  "peerDependencies": {
    "graphql": "^0.5.0-b || ^0.6.2"
  }
}
